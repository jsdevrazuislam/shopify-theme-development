{% liquid
  assign hero_banner = section.settings.hero_banner
  assign hero_banner_category = section.settings.hero_banner_category
  assign hero_banner_title = section.settings.hero_banner_title
  assign hero_banner_description = section.settings.hero_banner_description
  assign hero_banner_button = section.settings.hero_banner_button
%}
<section
  class="bg-no-repeat bg-cover bg-center"
  style="background-image: {% if hero_banner != blank %}url({{ hero_banner |  image_url:width:'100%'  }}) {% else %}url({{ 'hero-banner.png' |  asset_url }}) {% endif %};"
>
  <div class="container flex justify-end items-center min-h-screen">
    <div class="bg-[#FFF3E3] px-8 py-4 max-w-[40.3125em] rounded-md">
      <p class="font-[600] text-fontColor text-[1em] capitalize">{{ hero_banner_category }}</p>
      <h1 class="text-primary text-[3.2em] max-w-[8em] font-bold leading-[1.1em] mt-4 mb-4 capitalize">
        {{ hero_banner_title }}
      </h1>
      <p class="text-fontColor text-[1.25em] font-[500] mb-8">{{ hero_banner_description }}</p>
      <button class="bg-primary px-10 py-4 text-white rounded-lg capitalize">{{ hero_banner_button }}</button>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_banner",
      "label": "Select Hero Banner Picture"
    },
    {
      "type": "text",
      "id": "hero_banner_category",
      "label": "Hero Banner Category",
      "default": "New Arrival"
    },
    {
      "type": "text",
      "id": "hero_banner_title",
      "label": "Hero Banner Title",
      "default": "Discover Our New Collection"
    },
    {
      "type": "text",
      "id": "hero_banner_description",
      "label": "Hero Banner Description",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut elit tellus, luctus nec ullamcorper mattis."
    },
    {
      "type": "text",
      "id": "hero_banner_button",
      "label": "Hero Banner Button",
      "default": "Buy Now"
    }
  ]
}
{% endschema %}
